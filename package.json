{
  "name": "gronka",
  "version": "1.0.0",
  "description": "Discord bot that converts video attachments to GIF format",
  "main": "src/bot.js",
  "type": "module",
  "scripts": {
    "start": "node src/bot.js",
    "server": "node src/server.js",
    "webui": "node src/webui-server.js",
    "webui:dev": "concurrently \"WEBUI_PORT=3002 node src/webui-server.js\" \"vite\"",
    "webui:dev:server": "WEBUI_PORT=3002 node src/webui-server.js",
    "build:webui": "vite build",
    "register-commands": "node src/register-commands.js",
    "dev": "node --watch src/bot.js",
    "tunnel": "cloudflared tunnel run gif-cdn",
    "tunnel:list": "cloudflared tunnel list",
    "tunnel:info": "cloudflared tunnel info gif-cdn",
    "local": "concurrently \"npm run server\" \"npm start\"",
    "local:stop": "echo \"Press Ctrl+C to stop, or manually kill node processes\"",
    "docker": "docker compose up -d",
    "docker:stop": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:rebuild": "docker compose up -d --build",
    "docker:refresh": "(git pull || echo Skipping git pull) && docker compose up -d --build",
    "docker:logs": "docker compose logs -f",
    "docker:dev": "docker compose -f docker compose.yml -f docker compose.dev.yml up -d",
    "docker:status": "docker compose ps",
    "docker:health": "docker compose ps",
    "docker:ps": "docker ps --filter name=gronka --format \"table {{.Names}}\\t{{.Status}}\\t{{.Ports}}\"",
    "docker:which": "docker compose ps --services",
    "docker:stats": "docker stats --no-stream --format \"table {{.Name}}\\t{{.CPUPerc}}\\t{{.MemUsage}}\\t{{.NetIO}}\" $(docker compose ps -q)",
    "docker:logs:app": "docker compose logs -f app",
    "docker:logs:webui": "docker compose --profile webui logs -f webui",
    "docker:logs:tunnel": "docker compose --profile tunnel logs -f cloudflared",
    "docker:logs:cobalt": "docker compose logs -f cobalt",
    "docker:logs:all": "docker compose logs -f",
    "docker:start:app": "docker compose up -d app",
    "docker:start:webui": "docker compose --profile webui up -d webui",
    "docker:start:tunnel": "docker compose --profile tunnel up -d cloudflared",
    "docker:start:cobalt": "docker compose up -d cobalt",
    "docker:stop:app": "docker compose stop app",
    "docker:stop:webui": "docker compose --profile webui stop webui",
    "docker:stop:tunnel": "docker compose --profile tunnel stop cloudflared",
    "docker:stop:cobalt": "docker compose stop cobalt",
    "docker:restart:app": "docker compose restart app",
    "docker:restart:webui": "docker compose --profile webui restart webui",
    "docker:restart:tunnel": "docker compose --profile tunnel restart cloudflared",
    "docker:restart:cobalt": "docker compose restart cobalt",
    "docker:restart:all": "docker compose restart",
    "refresh:all": "npm run build:webui && docker compose down --remove-orphans && docker compose build --no-cache && docker compose up -d",
    "rebuild:all": "docker compose down --remove-orphans && docker compose build --no-cache && docker compose up -d",
    "restart:all": "docker compose restart",
    "docker:remove:webui": "docker compose --profile webui stop webui && docker compose --profile webui rm -f webui",
    "docker:remove:tunnel": "docker compose --profile tunnel stop cloudflared && docker compose --profile tunnel rm -f cloudflared",
    "docker:rollback": "echo \"Usage: npm run docker:remove:webui or npm run docker:remove:tunnel\"",
    "docker:rebuild:app": "docker compose build app && docker compose up -d app",
    "docker:rebuild:webui": "docker compose --profile webui build webui && docker compose --profile webui up -d webui",
    "docker:rebuild:tunnel": "docker compose --profile tunnel up -d --force-recreate cloudflared",
    "docker:shell": "docker compose exec app sh",
    "docker:shell:webui": "docker compose --profile webui exec webui sh",
    "docker:exec": "docker compose exec app",
    "docker:env": "docker compose exec app env",
    "docker:inspect": "docker inspect gronka",
    "docker:clean:temp": "docker compose exec app sh -c 'rm -rf /app/temp/*' || echo \"Container not running, cleaning host temp: rm -rf ./temp/*\"",
    "docker:clean": "docker compose down && docker system prune -f",
    "docker:prune": "docker system prune -a -f --volumes",
    "check:sync": "node scripts/check-lock-sync.js",
    "fix:deps": "npm install",
    "validate": "npm run check:sync && npm run lint && npm run format:check",
    "lint": "eslint . --max-warnings=0",
    "lint:warn": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "discord",
    "bot",
    "gif",
    "video",
    "converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "svelte": "^4.2.0",
    "vite": "^5.0.0"
  }
}
