{
  "name": "gronka",
  "version": "0.11.4-prerelease",
  "description": "Discord bot that converts video attachments to GIF format",
  "main": "src/bot.js",
  "type": "module",
  "scripts": {
    "start": "node src/bot.js",
    "server": "node src/server.js",
    "webui": "node src/webui-server.js",
    "webui:dev": "concurrently \"cross-env WEBUI_PORT=3002 node src/webui-server.js\" \"vite\"",
    "webui:dev:server": "cross-env WEBUI_PORT=3002 node src/webui-server.js",
    "build:webui": "vite build",
    "register-commands": "node src/register-commands.js",
    "dev": "node --watch src/bot.js",
    "local": "concurrently \"npm run server\" \"npm start\"",
    "local:stop": "echo \"Press Ctrl+C to stop, or manually kill node processes\"",
    "local:up": "node scripts/local-up.js",
    "local:down": "node scripts/local-down.js",
    "local:logs": "node scripts/local-logs.js",
    "local:restart": "node scripts/local-restart.js",
    "local:verify": "node scripts/local-verify.js",
    "local:register": "node src/register-commands.js",
    "bot:test": "node scripts/bot-start.js TEST",
    "bot:prod": "node scripts/bot-start.js PROD",
    "bot:test:dev": "nodemon --watch src --exec \"node scripts/bot-start.js TEST\"",
    "bot:prod:dev": "nodemon --watch src --exec \"node scripts/bot-start.js PROD\"",
    "bot:register:test": "node src/register-commands.js TEST",
    "bot:register:prod": "node src/register-commands.js PROD",
    "docker:up": "node scripts/docker-up.js",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:reload": "node scripts/docker-reload.js",
    "docker:reload:fast": "node scripts/docker-reload-fast.js",
    "docker:restart": "node scripts/docker-restart.js",
    "docker:copy-webui": "node scripts/docker-copy-webui.js",
    "docker:rebuild-webui": "node scripts/docker-rebuild-webui.js",
    "docker:verify": "node scripts/docker-verify.js",
    "docker:register": "docker compose exec app npm run register-commands",
    "check:sync": "node scripts/check-lock-sync.js",
    "migrate:storage": "node scripts/migrate-storage.js",
    "upload:404": "node scripts/upload-404-to-r2.js",
    "user:stats": "node scripts/user-stats.js",
    "fix:stuck-ops": "node scripts/fix-stuck-operations.js",
    "fetch:security": "node scripts/fetch-code-scanning-issues.js",
    "fix:deps": "npm install",
    "validate": "npm run check:sync && npm run lint && npm run format:check",
    "test": "cross-env R2_ACCOUNT_ID= R2_ACCESS_KEY_ID= R2_SECRET_ACCESS_KEY= R2_BUCKET_NAME= node --test test/",
    "test:watch": "cross-env R2_ACCOUNT_ID= R2_ACCESS_KEY_ID= R2_SECRET_ACCESS_KEY= R2_BUCKET_NAME= node --test --watch test/",
    "lint": "eslint . --max-warnings=0",
    "lint:warn": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "jekyll:serve": "bundle exec jekyll serve --port 5173 --host 0.0.0.0",
    "jekyll:build": "bundle exec jekyll build",
    "tunnel:gronka-waptop": "cloudflared tunnel --config .cloudflared/config.yml --loglevel debug run",
    "site:start": "npx concurrently \"npm run jekyll:serve\" \"npm run tunnel:gronka-waptop\"",
    "site:stop": "scripts\\stop-jekyll-tunnel.bat",
    "site:deploy": "powershell -File scripts/deploy-jekyll.ps1",
    "prepare": "husky"
  },
  "keywords": [
    "discord",
    "bot",
    "gif",
    "video",
    "converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/lib-storage": "^3.937.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.4.6",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "escape-html": "^1.0.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "fluent-ffmpeg": "^2.1.2",
    "lucide-svelte": "^0.554.0",
    "marked": "^17.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "http-proxy-middleware": "^3.0.3",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "svelte": "^5.43.14",
    "tmp": "^0.2.5",
    "vite": "^7.2.4"
  }
}
