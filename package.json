{
  "name": "gronka",
  "version": "1.0.0",
  "description": "Discord bot that converts video attachments to GIF format",
  "main": "src/bot.js",
  "type": "module",
  "scripts": {
    "start": "node src/bot.js",
    "server": "node src/server.js",
    "webui": "node src/webui-server.js",
    "webui:dev": "concurrently \"WEBUI_PORT=3002 node src/webui-server.js\" \"vite\"",
    "webui:dev:server": "WEBUI_PORT=3002 node src/webui-server.js",
    "build:webui": "vite build",
    "register-commands": "node src/register-commands.js",
    "dev": "node --watch src/bot.js",
    "local": "concurrently \"npm run server\" \"npm start\"",
    "local:stop": "echo \"Press Ctrl+C to stop, or manually kill node processes\"",
    "docker:up": "bash scripts/docker-up.sh",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:reload": "bash scripts/docker-reload.sh",
    "docker:restart": "bash scripts/docker-restart.sh",
    "docker:register": "docker compose exec app npm run register-commands",
    "check:sync": "node scripts/check-lock-sync.js",
    "migrate:storage": "node scripts/migrate-storage.js",
    "upload:404": "node scripts/upload-404-to-r2.js",
    "fix:deps": "npm install",
    "validate": "npm run check:sync && npm run lint && npm run format:check",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "lint": "eslint . --max-warnings=0",
    "lint:warn": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "jekyll:serve": "bundle exec jekyll serve --port 5173 --host 0.0.0.0",
    "jekyll:build": "bundle exec jekyll build",
    "prepare": "husky"
  },
  "keywords": [
    "discord",
    "bot",
    "gif",
    "video",
    "converter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/lib-storage": "^3.700.0",
    "axios": "^1.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2",
    "marked": "^17.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "svelte": "^4.2.0",
    "vite": "^5.0.0"
  }
}
