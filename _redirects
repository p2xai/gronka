# cloudflare pages redirects configuration
# this file ensures proper routing for the jekyll static site

# api endpoints - pass through to functions
/api/* /api/:splat 200

# ensure trailing slashes work correctly for directories
# this is critical for jekyll sites where /docs/ should serve /docs/index.html
/docs /docs/ 301
/blog /blog/ 301
/privacy /privacy.html 200
/terms /terms.html 200

# spa fallback should NOT apply - this is a static jekyll site
# each route should serve its own index.html or .html file

